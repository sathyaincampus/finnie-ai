# =============================================================================
# FINNIE AI â€” Environment Configuration Template
# =============================================================================
# Copy this file to .env and fill in your values
# =============================================================================

# -----------------------------------------------------------------------------
# LLM Providers (at least one required)
# -----------------------------------------------------------------------------

# OpenAI
OPENAI_API_KEY=sk-your-openai-key-here

# Anthropic
ANTHROPIC_API_KEY=sk-ant-your-anthropic-key-here

# Google
GOOGLE_API_KEY=your-google-api-key-here

# Default LLM Provider (openai, anthropic, or google)
DEFAULT_LLM_PROVIDER=openai
DEFAULT_LLM_MODEL=gpt-4o

# -----------------------------------------------------------------------------
# Database Connections
# -----------------------------------------------------------------------------

# NeonDB (PostgreSQL) - Users, Portfolios, Settings
# Get free tier at: https://neon.tech
NEON_DATABASE_URL=postgresql://user:password@host.neon.tech:5432/finnie

# AuraDB (Neo4j) - Knowledge Graph
# Get free tier at: https://neo4j.com/cloud/aura-free/
AURA_URI=neo4j+s://xxxxxxxx.databases.neo4j.io
AURA_USER=neo4j
AURA_PASSWORD=your-aura-password

# Redis Cloud - Vectors & Cache
# Get free tier at: https://redis.io/try-free
REDIS_URL=redis://default:password@host.redis.cloud:6379

# -----------------------------------------------------------------------------
# Observability (Optional)
# -----------------------------------------------------------------------------

# LangFuse - Tracing & Analytics
# Get free tier at: https://langfuse.com
LANGFUSE_PUBLIC_KEY=pk-lf-xxxxxxxx
LANGFUSE_SECRET_KEY=sk-lf-xxxxxxxx
LANGFUSE_HOST=https://cloud.langfuse.com

# -----------------------------------------------------------------------------
# Feature Flags
# -----------------------------------------------------------------------------

# Voice Features (requires valid OpenAI key for Whisper)
VOICE_ENABLED=true

# Local LLM (for future implementation)
USE_LOCAL_LLM=false
LOCAL_LLM_ENDPOINT=http://localhost:8080/v1

# GraphRAG (disable for faster startup during development)
GRAPHRAG_ENABLED=true

# -----------------------------------------------------------------------------
# Application Settings
# -----------------------------------------------------------------------------

# Environment (development, staging, production)
ENVIRONMENT=development

# API Settings
API_HOST=0.0.0.0
API_PORT=8000

# Streamlit Settings
STREAMLIT_PORT=8501

# Logging Level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO
